<section>
  <article>
    <a href="/challenges">Back</a>
    <header>
      <img src="/img/{{lowercase category}}.svg" alt="icon for {{category}}" height="60px" width="60px">
      <h2>{{title}}</h2>
    </header>
    <main>
      <p>{{description}}</p>
      <form action="/user-challenge/{{id}}" method="POST">
        <input type="submit" value="Select Challenge">
      </form>
    </main>
    <footer>
      <p>This challenge was added by
        <img src="https://api.adorable.io/avatars/48/{{username}}" height="50px" width="50px">{{username}} on {{added}}.</p>
    </footer>
  </article>
</section>